/* 轮播图2的样式 */
.swiper-container2{
  width: 100%;
  height: 300rpx;
}

.swiper2{
  width: 100%;
  height: 100%;
}

.img2{
  width: 630rpx;
  height: 100%;
  border-radius: 20rpx;
}

.img-in {
  transform:scale(1);
  transition: all 0.3s ease-in;
}

.img-out{
  transform:scale(0.8);
  transition: all 0.3s ease-out;
}