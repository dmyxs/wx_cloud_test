.cart-container{
    background-color: #fff;
}
.cart-box{
    overflow-x: hidden;
    margin-bottom: 92rpx;
    font-size: 28rpx;
}

.cart-item{
    display: flex;
    padding:20rpx;
    padding-left: 0;
    background-color: #fff;
    border-bottom:1rpx solid #D0D0D7;
    height: 186rpx;
}
.cart-item:last-child{
    margin-bottom: 0;
}

.cart-item>view{
    height: 100%;
}
.cart-item-main{
    width: 100%;
    display: flex;
}
.cart-item-checkbox{
    width: 84rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.cart-item-checkbox image{
    height: 44rpx;
    width: 44rpx;
}
.cart-item-img{
    width:186rpx;
    height: 100%;
    background-color: #F5F6F5;
    border-radius: 4rpx;
}
.cart-item-img image{
    width: 100%;
    height: 100%;
}
.cart-item-word{
    display: flex;
    flex: 1;
    flex-direction:column;
    justify-content:space-between;
    padding: 8rpx 0;
    margin:0 20rpx;
    box-sizing: border-box;
    color: #454553;
}
.title-box{
    display: flex;
    justify-content:space-between;
}
.bottom-box{
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.cart-item-counts{
    width:220rpx;
    display: flex;
    justify-content: space-between;
    text-align: center;
}
.cart-item-counts>view{
    display: flex;
    justify-content: center;
    align-items: center;
}
.cart-item-counts .btns{
    color: #454553;
    font-size: 50rpx;
    padding: 0 10rpx;
}
.cart-item-counts .btns.disabled{
    color: #D5D5DB;
}
.cart-item-counts .counts{
    color: #454553;
    font-size: 24rpx;
    padding-top:12rpx;
    box-sizing: border-box;
}
.delete{
    font-size: 40rpx;
    padding:0 10rpx;
}


/*合计*/
.footer-box{
    width: 100%;
    height: 120rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color:#AB956D;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-between;
}


.all-select{
    width: 40%;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.all-select image{
    height: 48rpx;
    width: 48rpx;
    margin:0 20rpx;
}

.all-price-submit{
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.all-price-submit.disabled{
    color: #e6e6e6;
}

.accounts-btn{
    width: 50%;
    font-size: 28rpx;
    border-right: 3rpx dotted #fff;
}

.price-text{
  font-size: 28rpx;
  width: 250rpx;
}

.arrow-icon{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 15rpx;
}

.arrow-icon image{
    height: 32rpx;
    width: 32rpx;
}

